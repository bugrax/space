# ============================================
# SaaS Idea Finder Configuration
# ============================================

# App Settings
DEBUG=true

# ============================================
# SCRAPER CONFIGURATION
# ============================================

# Primary: twscrape (accounts.txt)
# Backup: Apify API
# Fallback: Scweet (Selenium)

# Twitter accounts file for twscrape
TWITTER_ACCOUNTS_FILE=accounts.txt

# Apify API (backup scraper - paid but reliable)
# Get your token from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here
APIFY_ACTOR_ID=apidojo/tweet-scraper

# Enable/disable scrapers
ENABLE_TWSCRAPE=true
ENABLE_APIFY=true
ENABLE_SCWEET=false  # Requires Chrome/Selenium

# Scraping settings
SCRAPE_INTERVAL_HOURS=4
MAX_TWEETS_PER_QUERY=100
RATE_LIMIT_DELAY=2.0
MIN_MRR_THRESHOLD=500

# ============================================
# LEGACY TWITTER API (optional)
# ============================================

# Official Twitter API (if you have access)
# Get your free API key from: https://developer.twitter.com/en/portal/dashboard
# Free tier: 1500 tweets/month read access
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://saas_finder:saas_finder_secret@localhost:5432/saas_finder

# SQLite fallback path (for local dev without Docker)
DATABASE_PATH=./data/ideas.db

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_URL=redis://localhost:6379/0

# ============================================
# OPTIONAL SERVICES
# ============================================

# SimilarWeb API Key (for traffic analysis)
SIMILARWEB_API_KEY=

# SEMrush API Key (for traffic analysis)
SEMRUSH_API_KEY=

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=
